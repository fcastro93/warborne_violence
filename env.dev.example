# Development Environment Configuration
# Copy this file to .env and update the values

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
DJANGO_SETTINGS_MODULE=warborne_tools.settings_dev

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,177.93.0.28,violenceguilddev.duckdns.org

# Base URL for development
BASE_URL=https://violenceguilddev.duckdns.org

# CSRF Trusted Origins
CSRF_TRUSTED_ORIGINS=https://violenceguilddev.duckdns.org

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Database Configuration
DB_NAME=warborne_tools
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Discord Bot Configuration
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# Email Configuration (optional)
